# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS={{.CORSOriginsEnv}}

# Authentication
JWT_SECRET={{.JWTSecret}}
TOKEN_EXPIRATION=7d

# Backend Services
{{.BackendServicesEnv}}

# Example service URLs (customize based on your microservices)
USER_SERVICE_URL=http://localhost:8001
ACTIVITY_SERVICE_URL=http://localhost:8002
NOTIFICATION_SERVICE_URL=http://localhost:8003
ANALYTICS_SERVICE_URL=http://localhost:8004

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# GraphQL Configuration
GRAPHQL_DEPTH_LIMIT=10
GRAPHQL_COMPLEXITY_LIMIT=1000

# Cache Configuration
CACHE_TTL=60000
